{
  "name": "@junctionjs/next",
  "version": "0.1.1",
  "description": "Next.js integration for Junction",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --sourcemap --target es2022 --no-config --external react --external next --external @junctionjs/core --external @junctionjs/client --external @junctionjs/debug",
    "dev": "tsup src/index.ts --format esm --dts --watch --no-config --external react --external next --external @junctionjs/core --external @junctionjs/client --external @junctionjs/debug",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@junctionjs/client": "*",
    "@junctionjs/core": "*",
    "@junctionjs/debug": "*",
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@junctionjs/debug": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "next": "^15.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  },
  "license": "MIT"
}
